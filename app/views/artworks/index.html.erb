<p id="notice"><%= notice %></p>

<h1><%= t('.artworks') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('.thumbnail') %></th>
      <th><%= t('.name') %></th>
      <th><%= t('.media') %></th>
      <th><%= t('.available') %></th>
      <th><%= t('.price') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artworks.each do |artwork| %>
      <tr>
        <td>
          <%= image_tag artwork.image.url(:thumb), class: 'index-art-image' %>
        </td>
        <td>
          <em><%= artwork.name %></em>
        </td>
        <td><%= medium_list_or_none(artwork) %></td>
        <td><%= yes_or_no(artwork, :available) %></td>
        <td><%= price_or_not_applicable(artwork) %></td>
        <td><%= link_to t('.show'), artwork %></td>
        <td><%= link_to t('.edit'), edit_artwork_path(artwork) %></td>
        <td><%= link_to t('.destroy'), artwork, method: :delete, data: { confirm: t('.are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.add_artwork'), new_artwork_path %>
