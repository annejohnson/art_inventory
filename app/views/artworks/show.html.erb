<h1>
  <em><%= @artwork.name %></em>
</h1>

<p id="notice">
  <%= notice %>
</p>

<%= image_tag @artwork.image.url(:thumb) %>

<p>
  <strong><%= Artwork.human_attribute_name(:media) %>:</strong>
  <%= medium_list_or_none(@artwork) %>
</p>

<p>
  <strong><%= Artwork.human_attribute_name(:available) %>:</strong>
  <%= yes_or_no(@artwork, :available) %>
</p>

<p>
  <strong><%= Artwork.human_attribute_name(:price) %>:</strong>
  <%= price_or_not_applicable(@artwork) %>
</p>

<%= link_to 'Edit', edit_artwork_path(@artwork) %> |
<%= link_to 'Back', artworks_path %>
